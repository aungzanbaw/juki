<% unless notice.nil? || notice.empty? %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
        <p id="notice"><%= notice %></p>   
  </div>
<% end %>

<h1>Listing Needles</h1>

<table class="datatabled table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Model</th>
      <th>Category</th>
      <th>Size</th> 
      <th>Minimum stock</th>
      <th>Quantity</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @needles.each do |needle| %>
      <tr class="<%= "danger" if needle.price <= 0 %>" >
        <td><%= link_to needle.model, edit_needle_path(needle) %></td>
        <td><%= needle.category %></td>
        <td><%= needle.size %></td> 
        <td><%= needle.stock %></td>
        <td><%= needle.qty %></td>
        <td><%= needle.price %></td>  
        <td><%= link_to 'Destroy', needle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Needle', new_needle_path, class: "btn btn-primary" %>
