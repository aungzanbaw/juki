<p id="notice"><%= notice %></p>

<h1>Listing Needles</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Category</th>
      <th>Size</th>
      <th>Machine</th>
      <th>Stock</th>
      <th>Qty</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @needles.each do |needle| %>
      <tr>
        <td><%= needle.model %></td>
        <td><%= needle.category %></td>
        <td><%= needle.size %></td>
        <td><%= needle.machine %></td>
        <td><%= needle.stock %></td>
        <td><%= needle.qty %></td>
        <td><%= needle.price %></td>
        <td><%= link_to 'Show', needle %></td>
        <td><%= link_to 'Edit', edit_needle_path(needle) %></td>
        <td><%= link_to 'Destroy', needle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

