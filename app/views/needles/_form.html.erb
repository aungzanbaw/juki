<%= form_for(@needle) do |f| %>  

  <% if @needle.errors.any? %>
    <%= render "layouts/show_form_error_msg", locals: {objects: @needle} %> 
  <% end %>

  <div class="field form-group">
    <%= f.label :model %><br>
    <%= f.text_field :model, class: "form-control", required: 'required' %>
  </div>
  <div class="field form-group">
    <%= f.label :category %><br>
    <%= f.text_field(:category, class: "form-control", required: 'required') %>
    <p class="help-block">Woven only(R), Woven and Knit(RG), Knit(FG), Knit only(FFG)</p>
  </div>
  <div class="field form-group">
    <%= f.label :size %><br>
    <%= f.text_field :size, class: "form-control", required: 'required' %>
  </div>
  <div class="field form-group">
    <%= f.label :stock, "Minimum stock level" %><br>
    <%= f.number_field :stock, class: "form-control", required: 'required', min:0 %>
  </div>
  <div class="field form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control", required: 'required', min:0 %>
  </div>
  <br>
  <div class="actions">
    <%= f.button :submit => "",class: "btn btn-primary" %> <%= link_to 'Back', needles_path %>
  </div>
<% end %>
