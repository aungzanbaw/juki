<h1>Admin Login</h1>

<%= form_tag('admin_login', method: :post) do  %>

	<div class="field form-group">
    <%= label_tag :name %><br>
    <%= text_field_tag :name, nil, class: "form-control", required: 'required' %>
  </div>
  
  <div class="field form-group">
    <%= label_tag :password_digest, "Password" %><br>
    <%= password_field_tag :password_digest, nil, class: "form-control", required: 'required' %>
  </div>

  <div class="actions">
  	<%= submit_tag("Login",class: "btn btn-success") %>
  </div>
  
<% end %>