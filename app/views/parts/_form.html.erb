<%= form_for(@part) do |f| %>

  <% if @part.errors.any? %>
    <%= render "layouts/show_form_error_msg", locals: {objects: @part} %> 
  <% end %>

  <div class="field form-group">
    <%= f.label :model %><br>
    <%= f.text_field :model, class: "form-control", required: 'required' %>
  </div> 
  <div class="field form-group">
    <%= f.label :namemm, "Name in Myanmar" %><br>
    <%= f.text_field :namemm, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :nameeng, "Name in English" %><br>
    <%= f.text_field :nameeng, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", size: '0x5' %>
  </div>
  <div class="field form-group">
    <%= f.label :machine_id %><br>
    <%= f.collection_select :machine_id, Machine.all, :id, :model, {prompt: false}, {:class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :stock, "Minimum stock level" %><br>
    <%= f.number_field :stock, class: "form-control", required: 'required', min: 0 %>
  </div>
  
  <div class="field form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control", required: 'required', min: 1 %>
  </div>
  <br>
  <div class="actions">
    <%= f.button :submit => "",class: "btn btn-primary" %> <%= link_to 'Back', parts_path %>
  </div>
<% end %>
