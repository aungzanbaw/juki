<%= form_for(@machine) do |f| %>
  
  <% if @machine.errors.any? %>
    <%= render "layouts/show_form_error_msg", locals: {objects: @machine} %> 
  <% end %>

  <div class="field form-group">
    <%= f.label :model %><br>
    <%= f.text_field :model, class: "form-control", required: 'required' %>
  </div>
  <div class="field form-group">
    <%= f.label :series %><br>
    <%= f.text_field :series, class: "form-control", required: 'required' %>
  </div>
  <div class="field form-group">
    <%= f.label :namemm, "Name in Myanmar" %><br>
    <%= f.text_field :namemm, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :nameeng, "Name in English" %><br>
    <%= f.text_field :nameeng, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", size: '0x5' %>
  </div>
  <div class="field form-group">
    <%= f.label :company, "Manufacture Company" %><br>
    <%= f.text_field :company, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :stock, "Minimum stock level" %><br>
    <%= f.number_field :stock, class: "form-control", min: 0 %>
  </div> 
  <br>
  <div class="actions form-group">  
    <%= f.button :submit => "",class: "btn btn-primary" %> <%= link_to 'Back', machines_path %>
  </div>
<% end %>
