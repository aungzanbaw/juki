<% unless notice.nil? || notice.empty? %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
        <p id="notice"><%= notice %></p>   
  </div>
<% end %>

<h1>Listing Machines</h1>

<table class="datatabled table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Model</th>
      <th>Series</th>
      <th>Myanmar</th>
      <th>English</th>
      <th>Description</th>
      <th>Company</th>
      <th>Minimum Stock</th>
      <th>Quantity</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @machines.each do |machine| %>
      <tr>
        <td><p><%= link_to machine.model, edit_machine_path(machine) %></p></td>
        <td><%= machine.series %></td>
        <td><%= machine.namemm %></td>
        <td><%= machine.nameeng %></td>
        <td><%= truncate(machine.description) %></td>
        <td><%= machine.company %></td>
        <td><%= machine.stock %></td>
        <td><%= machine.qty %></td>
        <td><%= link_to 'Destroy', machine, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Machine', new_machine_path, class: 'btn btn-primary' %>
