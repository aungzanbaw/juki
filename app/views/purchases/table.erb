<% unless notice.nil? || notice.empty? %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
        <p id="notice"><%= notice %></p>   
  </div>
<% end %>

<h1>Tables Purchase Order</h1>

<table class="datatabled table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th>Width</th>
      <th>Height</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Cart</th>
    </tr>
  </thead>

  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.brand %></td>
        <td><%= table.name %></td>
        <td><%= table.width %></td>
        <td><%= table.height %></td>
        <td><%= table.qty %></td>
        <td><%= table.price %></td>  
        <td><%= link_to 'Add to cart', add_to_cart_path(id: table.id, category: table.class), class: "btn btn-link add_to_cart" %></td>
      </tr>
    <% end %>
  </tbody>
</table>