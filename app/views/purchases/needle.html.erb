<% unless notice.nil? || notice.empty? %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
        <p id="notice"><%= notice %></p>   
  </div>
<% end %>

<h1>Needles Purchase Order</h1>

<table class="datatabled table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Model</th>
      <th>Category</th>
      <th>Size</th> 
      <th>Minimum stock</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Cart</th>
    </tr>
  </thead>

  <tbody>
    <% @needles.each do |needle| %>
      <tr>
        <td><%= needle.model %></td>
        <td><%= needle.category %></td>
        <td><%= needle.size %></td>
        <td><%= needle.stock %></td>
        <td><%= needle.qty %></td>
        <td><%= needle.price %></td>  
        <td><%= link_to 'Add to cart', add_to_cart_path(id: needle.id, category: needle.class), class: "btn btn-link add_to_cart" %></td>
      </tr>
    <% end %>
  </tbody>
</table> 