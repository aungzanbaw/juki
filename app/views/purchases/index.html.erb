<p id="notice"><%= notice %></p>

<h1>Purchases orders - invoices listing</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Address</th>
      <th>Nic</th>
      <th>Phone</th>
      <th>Total</th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= link_to purchase.created_at, purchase %></td>
        <td><%= purchase.name %></td>
        <td><%= purchase.address %></td>
        <td><%= purchase.nic %></td>
        <td><%= purchase.phone %></td>
        <td><%= purchase.total %></td> 
      </tr>
    <% end %>
  </tbody>
</table> 