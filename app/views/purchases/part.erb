<% unless notice.nil? || notice.empty? %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
        <p id="notice"><%= notice %></p>   
  </div>
<% end %>

<h1>Parts Purchase Order</h1>

<table class="datatabled table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Model</th>
      <th>Myanmar</th>
      <th>English</th>
      <th>Description</th>
      <th>Machine</th>
      <th>Minimum stock</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Cart</th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.model %></td>
        <td><%= part.namemm %></td>
        <td><%= part.nameeng %></td>
        <td><%= truncate(part.description) %></td>
        <td><%= part.machine.model %></td>
        <td><%= part.stock %></td>
        <td><%= part.qty %></td>
        <td><%= part.price %></td> 
        <td><%= link_to 'Purchase', '#' %></td>
      </tr>
    <% end %>
  </tbody>
</table> 