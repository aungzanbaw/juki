<% unless notice.nil? || notice.empty? %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
        <p id="notice"><%= notice %></p>   
  </div>
<% end %>

<h1>Machines Purchase Order</h1>

<table class="datatabled table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Model</th>
      <th>Series</th>
      <th>Myanmar</th>
      <th>English</th>
      <th>Description</th>
      <th>Company</th>
      <th>Minimum Stock</th>
      <th>Quantity</th> 
      <th>Add to</th>
    </tr>
  </thead>

  <tbody>
    <% @machines.each do |machine| %>
      <tr>
        <td><p><%= machine.model %></p></td>
        <td><%= machine.series %></td>
        <td><%= machine.namemm %></td>
        <td><%= machine.nameeng %></td>
        <td><%= truncate(machine.description) %></td>
        <td><%= machine.company %></td>
        <td><%= machine.stock %></td>
        <td><%= machine.qty %></td> 
        <td><%= link_to 'Add to cart', add_to_cart_path(id: machine.id, category: machine.class), class: "btn btn-link add_to_cart" %></td>        
      </tr>
    <% end %>
  </tbody>
</table> 