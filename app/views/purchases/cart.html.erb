<h1>Purchase Cart</h1>  

<% unless notice.nil? || notice.empty? %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
        <p id="notice"><%= notice %></p>   
  </div>
<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
    	<th>#</th>
      <th>Name</th>
      <th>Category</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Menu</th> 
    </tr>
  </thead>

  <tbody>
    <% @datas.each do |data| %>
      <tr>
        <td><%= data[:id] %></td> 
        <td><%= data[:name] %></td> 
        <td><%= data[:category] %></td> 
        <td><%= data[:qty] %></td> 
        <td><%= data[:price] %></td> 
        <td><%= link_to 'Update', remove_from_cart_path(id: data[:id], category: data[:category]), class: "btn btn-link" %> <%= link_to 'Remove', remove_from_cart_path(id: data[:id], category: data[:category]), class: "btn btn-link" %></td>
      </tr>
    <% end %>
    <tr>
    	<td colspan="4"></td>
    	<td>Subtotal</td>
    	<td><%= @total %></td>
    </tr>
    <tr>
    	<td colspan="4"></td>
    	<td>Tax</td>
    	<td>0</td>
    </tr>
    <tr>
    	<td colspan="5"></td>
    	<td><%= link_to 'Checkout', "#", class: "btn btn-default" %></td>
    </tr>
  </tbody>
</table>

