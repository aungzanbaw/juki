<%= form_for(@delivery) do |f| %> 
  <%= f.hidden_field :msale_id, value: params[:msale] %>
  <div class="field form-group">
    <%= f.label :staff_id %><br>
    <%= f.collection_select :staff_id, Staff.all, :id, :name, {prompt: false}, {:class => "form-control"} %>
  </div>

  <div class="field form-group">
    <%= f.label :customer, "Customer / Name" %><br>
    <%= f.text_field :customer, class: "form-control", required: 'required' %>
  </div>
  <div class="field form-group">
    <%= f.label :nic, "NIC" %><br>
    <%= f.text_field :nic, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.button :submit => "",class: "btn btn-primary" %> <%= link_to 'Back', msales_path %>
  </div>
<% end %>
