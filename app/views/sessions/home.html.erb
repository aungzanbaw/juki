<% unless notice.nil? || notice.empty? %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
        <p id="notice"><%= notice %></p>   
  </div>
<% end %>

<h1>Sale Orders</h1>

<table class="datatabled table table-bordered table-hover table-condensed">
  <thead>
    <tr> 
    	<th>#</th>
    	<th>Staff</th>
    	<th>Customer</th>
    	<th>Status</th>
      <th>Myanmar</th>
      <th>English</th>
    	<th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= "SINV#"+sale.id.to_s + sale.created_at.year.to_s + sale.created_at.month.to_s + sale.created_at.day.to_s %></td> 
        <td><%= sale.staff.name %></td>
        <td><%= sale.customer %></td>
        <td>
          <% if sale.postpone %>
            <span class="label label-danger">Postponed</span>             
          <% else %>
        		<span class="label label-success">Paid</span>            
        	<% end %> 
        </td>
        <td><%= link_to "Print(Ks)", print_in_ks_path(id:sale.id) %></td>
        <td><%= link_to "Print($)", sale  %></td>
        <td><%= sale.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table> 