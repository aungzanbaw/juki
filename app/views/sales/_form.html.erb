<%= form_for(@sale) do |f| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% @sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field form-group">
    <%= f.label :customer, "Customer / Company" %><br>
    <%= f.text_field :customer, class: "form-control", required: 'required' %>
  </div>
  <div class="field form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :nic,"NIC" %><br>
    <%= f.text_field :nic, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :cash %><br>
    <%= f.number_field :cash, class: "form-control", max: @total %>
  </div>  
  <div class="actions">
    <%= f.button :submit => "Create Sale",class: "btn btn-primary" %> or <%= link_to 'Back', staff_home_path %>
  </div>
<% end %>
