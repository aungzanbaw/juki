<h1>New Sale Invoice</h1>

<table class="table table-bordered">
  <thead>
    <tr>
    	<th>#</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th> 
    </tr>
  </thead>

  <tbody>
    <% @datas.each do |data| %>
      <tr>
        <td><%= data["id"] %></td> 
        <td><%= data["name"] %></td> 
        <td><%= data["qty"] %></td> 
        <td><%= data["price"] %></td> 
      </tr>
    <% end %>
    <tr>
    	<td colspan="2"></td>
    	<td>Subtotal</td>
    	<td><%= number_to_currency(@total) %></td>
    </tr>
    <tr>
    	<td colspan="2">.</td>
    	<td></td>
    	<td></td>
    </tr>
    
  </tbody>
</table>

<%= render 'form' %>
