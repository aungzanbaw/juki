<h1>Staff Login</h1>

<% unless notice.nil? || notice.empty? %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
        <p id="notice"><%= notice %></p>   
  </div>
<% end %>

<%= form_tag('validate', method: :post) do  %>
  
  <div class="field form-group">
    <%= label_tag :name %><br>
    <%= text_field_tag(:name,nil, class: "form-control", required: 'required') %>
  </div> 
  <div class="field form-group">
    <%= label :password_digest, "Password" %><br>
    <%= password_field_tag :password_digest, nil, class: "form-control", required: 'required' %>
  </div>
  <div class="actions">
    <%= submit_tag("Login",class: "btn btn-primary") %> <%= link_to 'Back', root_path %>
  </div>  
<% end %>
